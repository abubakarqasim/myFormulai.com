# Environment Configuration Template
# Copy this file to create environment-specific .env files:
# - .env.local (for local development)
# - .env.dev (for development environment)
# - .env.staging (for staging environment)
# - .env.prod (for production environment)

# Current Environment (local, dev, staging, prod)
ENV=local

# Local Environment URLs
LOCAL_BASE_URL=http://localhost:3000
LOCAL_API_BASE_URL=http://localhost:3001

# Development Environment URLs
DEV_BASE_URL=https://dev.example.com
DEV_API_BASE_URL=https://api-dev.example.com

# Staging Environment URLs
STAGING_BASE_URL=https://staging.example.com
STAGING_API_BASE_URL=https://api-staging.example.com

# Production Environment URLs
PROD_BASE_URL=https://example.com
PROD_API_BASE_URL=https://api.example.com

# Test Configuration
TEST_TIMEOUT=30000
TEST_RETRIES=2
TEST_WORKERS=4

# Browser Configuration
HEADLESS=true
BROWSER=chromium

# Reporting Configuration
SCREENSHOT=true
VIDEO=true
TRACE=true

# API Configuration
API_TIMEOUT=30000

# Authentication (if needed)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testdb
DB_USER=testuser
DB_PASSWORD=testpass
